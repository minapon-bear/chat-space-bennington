.side-bar
  .user-name
    .user-name__top-items
      .user-name__top-items__name
        = current_user.name
      = link_to new_group_path do
        = icon("fas", "edit", class: "user-name__top-items__icons")
      = link_to edit_user_path(current_user) do
        = icon("fas", "cog", class: "user-name__top-items__icons")
  .group-list
    - current_user.groups.each do |group|
      .group-list__box
        = link_to group_messages_path(group), class:"link" do
          .group-list__box__name
            = group.name
          .group-list__box__news
            = group.show_last_message
            
  
