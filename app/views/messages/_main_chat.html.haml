.chat-main
  .chat-main__group-info
    .chat-main__group-info__group-name
      = @group.name
      .chat-main__group-info__group-name__members
        Memberï¼š
        - @group.users.each do |user|
          .chat-main__group-info__group-name__members__member
            = user.name

    =link_to edit_group_path(@group) , class: "chat-main__group-info__btn chat-main__group-info__btn__edit" do
      Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .form
        .form__message
          = f.text_field :content, class: 'form__message__data', placeholder: 'type a message'
          = f.label :image, class: 'form__message__pic' do
            = icon('fas', 'image')
            = f.file_field :image, style: 'display:none'
        .form__sent
          = f.submit 'Send', class: 'form__sent__btn'